    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:scaleType="fitXY"
                android:id="@+id/iv_image_list"
                android:layout_margin="@dimen/_5sdp"
                android:src="@drawable/bg_ongc"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/ll_top_list"
                android:layout_margin="@dimen/_10sdp"
                android:layout_toEndOf="@+id/iv_image_list"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:id="@+id/tv_message"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:ellipsize="end"
                    android:fontFamily="@font/proximanova_regular"
                    android:textColor="@color/colorBlack"
                    android:text="Closed and Restricted holiday for the year to be declared word center wise"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_5sdp">


                    <TextView
                        android:id="@+id/dateview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_10sdp"
                        android:fontFamily="@font/avenirltstd_light"
                        android:text="20 January 2019"
                        android:textColor="@color/colorGray"/>

                   <!-- <TextView
                        android:id="@+id/timeview"
